<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="com.example.g13149881.asportuniverse.MainActivity">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:text="@string/soccer"
        android:background="@drawable/soccer"
        android:id="@+id/soccer_button"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true"
        android:cropToPadding="true"
        android:contentDescription="@string/imageSoccer"/>
    <Button
        android:layout_width="match_parent"
        android:layout_height="144dp"
        android:background="@drawable/ufc"
        android:id="@+id/ufc_button"
        android:layout_above="@+id/ufc_textView"
        android:layout_alignParentStart="true" />
    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@drawable/rugby"
        android:id="@+id/rugby_button"
        android:contentDescription="@string/rugby"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/soccer_textview"
        android:layout_above="@+id/rugby_textview" />

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/sports_universe"
        android:id="@+id/textView2"
        android:shadowColor="#ffffff"
        android:textAlignment="center"
        android:textStyle="bold|italic"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="@string/soccerUpdate"
        android:id="@+id/soccer_textview"
        android:layout_below="@+id/soccer_button"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="@string/rugbyUpdates"
        android:id="@+id/rugby_textview"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_above="@+id/ufc_button"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="@string/ufcUpdates"
        android:id="@+id/ufc_textView"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>