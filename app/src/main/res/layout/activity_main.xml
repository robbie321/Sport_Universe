<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context="com.example.g13149881.asportuniverse.MainActivity">


    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button"
        android:background="@drawable/asettings"
        android:backgroundTint="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/action_settings"
        android:id="@+id/textView2"
        android:textColor="#ffffffff"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/soccer_button"
        android:layout_below="@+id/textView2"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="47dp"
        android:background="#00000000" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/rugby_button"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:background="#00000000" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/ufc_button"
        android:layout_below="@+id/rugby_button"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="59dp"
        android:background="#00000000" />

</RelativeLayout>