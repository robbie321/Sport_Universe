<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/testback"
    tools:context="com.example.g13149881.asportuniverse.MainActivity">

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:text="@string/soccer"
        android:background="@drawable/afooty"
        android:id="@+id/soccer_button"
        android:contentDescription="@string/imageSoccer"
        android:layout_above="@+id/soccer_textview"
        android:layout_centerHorizontal="true" />
    <Button
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/aboxer"
        android:id="@+id/ufc_button"
        android:layout_below="@+id/rugby_textview"
        android:layout_centerHorizontal="true" />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:background="@drawable/asport"
        android:id="@+id/rugby_button"
        android:contentDescription="@string/rugby"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/soccerUpdate"
        android:id="@+id/soccer_textview"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_above="@+id/rugby_button"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="@string/rugbyUpdates"
        android:id="@+id/rugby_textview"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/rugby_button"
        android:layout_alignStart="@+id/soccer_textview" />

    <TextView
        android:layout_width="130sp"
        android:layout_height="wrap_content"
        android:text="@string/ufcUpdates"
        android:id="@+id/ufc_textView"
        android:gravity="center"
        android:textStyle="bold"
        android:textColor="#ffffff"
        android:layout_below="@+id/ufc_button"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/button"
        android:background="@drawable/asettings"
        android:backgroundTint="#ffffffff"
        android:layout_alignParentTop="true"
        android:layout_alignEnd="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="@string/action_settings"
        android:id="@+id/textView2"
        android:textColor="#ffffffff"
        android:layout_below="@+id/button"
        android:layout_alignParentEnd="true" />

</RelativeLayout>