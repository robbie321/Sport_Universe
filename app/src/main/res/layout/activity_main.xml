<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgroundimage"
    tools:context="com.example.g13149881.asportuniverse.MainActivity">


    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/soccer_button"
        android:background="#00000000"
        android:layout_above="@+id/ufc_button"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="74dp" />



    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/ufc_button"
        android:background="#00000000"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/soccer_button" />

    <Button
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/rugby_button"
        android:background="#00000000"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/ufc_button"
        android:layout_marginBottom="121dp" />



</RelativeLayout>