<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text="@string/legs"
            android:id="@+id/legs_button"
            />

        <Button

            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text="@string/abs"
            android:id="@+id/abs_button"
            android:layout_alignParentEnd="false"
            android:layout_alignParentStart="false"
            android:layout_below="@+id/legs_button"/>
        <Button
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text="@string/chest"
            android:id="@+id/chest_button"
            android:layout_below="@+id/abs_button" />

        <Button
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text="@string/back"
            android:id="@+id/back_button"
            android:layout_below="@+id/chest_button"/>

        <Button
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text="@string/shoulder"
            android:id="@+id/shoulders_button"
            android:layout_below="@+id/back_button" />

        <Button
            android:layout_width="360dp"
            android:layout_height="100dp"
            android:text="@string/arms"
            android:id="@+id/arms_button"
            android:background="@drawable/arms"
            android:layout_below="@+id/shoulders_button"
            android:textColor="#00000000" />
    </RelativeLayout>
</ScrollView>