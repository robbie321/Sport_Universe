<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1" android:background="@drawable/background">

    <Button
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:background="@drawable/caloriecounter"
        android:id="@+id/calorie_button"
        android:textColor="#00000000"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="360dp"
        android:layout_height="100dp"
        android:id="@+id/mealplan"
        android:textColor="#00000000"
        android:background="@drawable/sevenleanmeals"
        android:layout_below="@+id/calorie_button"
        android:layout_centerHorizontal="true" />
</RelativeLayout>