<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1" android:background="@drawable/background3">

    <Button
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:id="@+id/button_home"
        android:background="@drawable/backbutton"
        android:backgroundTint="#ffffffff"
        android:layout_above="@+id/listView2" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="417dp"
        android:id="@+id/listView2"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:id="@+id/soccer_button"
        android:background="@drawable/afooty"
        android:backgroundTint="#ffffffff"
        android:layout_marginStart="21dp"
        android:layout_above="@+id/listView2"
        android:layout_toEndOf="@+id/button_home" />

    <Button
        android:layout_width="46dp"
        android:layout_height="wrap_content"
        android:id="@+id/rugby_button"
        android:background="@drawable/asport"
        android:backgroundTint="#ffffffff"
        android:layout_marginStart="22dp"
        android:layout_above="@+id/listView2"
        android:layout_toEndOf="@+id/soccer_button" />

</RelativeLayout>